/*
 * Silakka54 split keyboard shield definition.
 */

#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &silakka54_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
// | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |               | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |               | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |
// | SW25 | SW26 | SW27 | SW28 | SW29 | SW30 |               | SW30 | SW29 | SW28 | SW27 | SW26 | SW25 |
// | SW37 | SW38 | SW39 | SW40 | SW41 | SW42 |               | SW42 | SW41 | SW40 | SW39 | SW38 | SW37 |
//                    | SW43 | SW44 | SW45 |               | SW45 | SW44 | SW43 |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)   RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)   RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)   RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)   RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                      RC(4,3) RC(4,4) RC(4,5)   RC(4,6) RC(4,7) RC(4,8)
        >;
    };

    silakka54_layout: silakka54_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        keys
            = <&key_physical_attrs 100 100    0    0 0 0 0>
            , <&key_physical_attrs 100 100  100    0 0 0 0>
            , <&key_physical_attrs 100 100  200    0 0 0 0>
            , <&key_physical_attrs 100 100  300    0 0 0 0>
            , <&key_physical_attrs 100 100  400    0 0 0 0>
            , <&key_physical_attrs 100 100  500    0 0 0 0>
            , <&key_physical_attrs 100 100  900    0 0 0 0>
            , <&key_physical_attrs 100 100 1000    0 0 0 0>
            , <&key_physical_attrs 100 100 1100    0 0 0 0>
            , <&key_physical_attrs 100 100 1200    0 0 0 0>
            , <&key_physical_attrs 100 100 1300    0 0 0 0>
            , <&key_physical_attrs 100 100 1400    0 0 0 0>
            , <&key_physical_attrs 100 100    0  120 0 0 0>
            , <&key_physical_attrs 100 100  100  120 0 0 0>
            , <&key_physical_attrs 100 100  200  120 0 0 0>
            , <&key_physical_attrs 100 100  300  120 0 0 0>
            , <&key_physical_attrs 100 100  400  120 0 0 0>
            , <&key_physical_attrs 100 100  500  120 0 0 0>
            , <&key_physical_attrs 100 100  900  120 0 0 0>
            , <&key_physical_attrs 100 100 1000  120 0 0 0>
            , <&key_physical_attrs 100 100 1100  120 0 0 0>
            , <&key_physical_attrs 100 100 1200  120 0 0 0>
            , <&key_physical_attrs 100 100 1300  120 0 0 0>
            , <&key_physical_attrs 100 100 1400  120 0 0 0>
            , <&key_physical_attrs 100 100    0  240 0 0 0>
            , <&key_physical_attrs 100 100  100  240 0 0 0>
            , <&key_physical_attrs 100 100  200  240 0 0 0>
            , <&key_physical_attrs 100 100  300  240 0 0 0>
            , <&key_physical_attrs 100 100  400  240 0 0 0>
            , <&key_physical_attrs 100 100  500  240 0 0 0>
            , <&key_physical_attrs 100 100  900  240 0 0 0>
            , <&key_physical_attrs 100 100 1000  240 0 0 0>
            , <&key_physical_attrs 100 100 1100  240 0 0 0>
            , <&key_physical_attrs 100 100 1200  240 0 0 0>
            , <&key_physical_attrs 100 100 1300  240 0 0 0>
            , <&key_physical_attrs 100 100 1400  240 0 0 0>
            , <&key_physical_attrs 100 100    0  360 0 0 0>
            , <&key_physical_attrs 100 100  100  360 0 0 0>
            , <&key_physical_attrs 100 100  200  360 0 0 0>
            , <&key_physical_attrs 100 100  300  360 0 0 0>
            , <&key_physical_attrs 100 100  400  360 0 0 0>
            , <&key_physical_attrs 100 100  500  360 0 0 0>
            , <&key_physical_attrs 100 100  900  360 0 0 0>
            , <&key_physical_attrs 100 100 1000  360 0 0 0>
            , <&key_physical_attrs 100 100 1100  360 0 0 0>
            , <&key_physical_attrs 100 100 1200  360 0 0 0>
            , <&key_physical_attrs 100 100 1300  360 0 0 0>
            , <&key_physical_attrs 100 100 1400  360 0 0 0>
            , <&key_physical_attrs 100 100  300  480 0 0 0>
            , <&key_physical_attrs 100 100  400  480 0 0 0>
            , <&key_physical_attrs 100 100  500  480 0 0 0>
            , <&key_physical_attrs 100 100  900  480 0 0 0>
            , <&key_physical_attrs 100 100 1000  480 0 0 0>
            , <&key_physical_attrs 100 100 1100  480 0 0 0>
            ;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};

&silakka54_layout {
    transform = <&default_transform>;
};
